  "hconcat": [
    {
      "width": 500,
      "height": 300,
      "title": "GDP per Capita by Year",
      "data": {
        "url": "https://raw.githubusercontent.com/tgururaj1173/3179_HW4/main/data/reshaped_gdp_data.csv"
      },
      "transform": [
        {
          "filter": "datum.Country == countryFilter",
          "calculate": "year(datum.Year)", "as": "Year"
        }
      ],
      "mark": "line",
      "encoding": {
        "x": {"field": "Year", "type": "temporal", "title": "Year"},
        "y": {"field": "GDP_per_capita", "type": "quantitative", "title": "GDP per Capita"},
        "color": {"field": "Country", "type": "nominal", "title": "Country"},
        "tooltip": [
          {"field": "Year", "type": "temporal", "title": "Year"},
          {"field": "GDP_per_capita", "type": "quantitative", "title": "GDP per Capita"}
        ]
      }
    },
    {
      "width": 500,
      "height": 400,
      "title": "HDI vs HPI",
      "data": {"url": "https://raw.githubusercontent.com/tgururaj1173/3179_HW4/main/data/HDI_HPI_data.csv"},
      "transform": [{
        "filter": {"and": [
          {"field": "HDI", "valid": true},
          {"field": "Normalised_HPI", "valid": true}
        ]}
      }],
      "mark": "rect",
      "width": 300,
      "height": 200,
      "encoding": {
        "x": {
          "bin": {"maxbins":60},
          "field": "HDI",
          "type": "quantitative"
        },
        "y": {
          "bin": {"maxbins": 40},
          "field": "Normalised_HPI",
          "type": "quantitative"
        },
        "color": {
          "aggregate": "count",
          "type": "quantitative"
        }
      }
    }
    ],
      "config": {
        "view": {
          "stroke": "transparent"
        }
      }
